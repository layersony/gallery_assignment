pipeline {
    agent any
    
    tools {
        nodejs "node20"
    }

    environment {
        SLACK_CHANNEL = 'maingisamuel_ip1'
    }

    stages {
        stage ('Clean Workspace Before build -----') {
            steps {
                cleanWs(
                    deleteDirs: true,
                    notFailBuild: true, 
                    cleanWhenNotBuilt: false,
                    patterns :[
                        [
                            pattern: 'node_modules',
                            type: 'EXCLUDE'
                        ]
                    ]
                )
            }
        }
        stage ('Pre-Build Notification -----') {
            steps{
                slackSend(
                    channel: SLACK_CHANNEL,
                    color: 'good',
                    message: "Pipeline ${env.JOB_NAME} is starting! Build #${env.BUILD_NUMBER}"
                )
            }
        }
        stage ("Clone Project -----"){
            steps {
                git branch:"master", url:"https://github.com/layersony/gallery_assignment.git"
            }
        }
        stage ("Build Code -----"){
            steps {
                sh "npm install"
            }
        }
        stage ("Test Code -----"){
            steps {
                sh "npm test"
            }
        }
        stage ("Deploy to render -----"){
            steps {
                sh "curl -X POST https://api.render.com/deploy/srv-d4labdshg0os73b5k0gg?key=--4s6glpt8Q"
            }
        }
    }

    post {
        success {
            slackSend(
                channel: SLACK_CHANNEL,
                color: 'good',
                message: """
Build ${currentBuild.fullDisplayName} Completed Successfully

Current Job: ${env.JOB_NAME}
Build URL: ${env.BUILD_URL}
Build NUMBER: ${env.BUILD_NUMBER}
Status: ${currentBuild.currentResult}

Access Live Site: https://gallery-assignment-h2dg.onrender.com/

                """
            )

            emailext (
                subject: "Successful: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
Build ${currentBuild.fullDisplayName} Completed Successfully

Current Job: ${env.JOB_NAME}
Build URL: ${env.BUILD_URL}
Build NUMBER: ${env.BUILD_NUMBER}
Status: ${currentBuild.currentResult}

Access Live Site: https://gallery-assignment-h2dg.onrender.com/
                """,
                to: 'sammaingi5@gmail.com'
            )
        }

        failure {
            slackSend(
                channel: SLACK_CHANNEL,
                color: 'danger',
                message: "Pipeline Failed, Check Jenkins Logs"
            )

            emailext (
                subject: "Failed: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """<p>Failed: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
                <p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>
                <p>Build URL: ${env.BUILD_URL}</p>
                """,
                to: 'sammaingi5@gmail.com'
            )
        }

        always {
            slackSend(
                channel: SLACK_CHANNEL,
                color: 'warning',
                message: "Pipeline Completed"
            )
        }
    }
}