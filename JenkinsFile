pipeline {
    agent any
    
    tools {
        nodejs "node20"
    }
    stages {
        stage ("Clone Project -----"){
            steps {
                git branch:"master", url:"https://github.com/layersony/gallery_assignment.git"
            }
        }
        stage ("Install Required Modules -----"){
            steps {
                sh "npm install"
            }
        }
        stage ("Test Code -----"){
            steps {
                sh "npm test"
            }
        }
        stage ("Deploy to render -----"){
            steps {
                sh "curl -X POST https://api.render.com/deploy/srv-d4labdshg0os73b5k0gg?key=--4s6glpt8Q"
            }
        }
    }
}